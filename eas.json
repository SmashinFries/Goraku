{
  "cli": {
    "version": ">= 0.41.0"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "developmentClient": true,
      "android": {
        "gradleCommand": ":app:assembleDevelopmentDebug"
      },
      "ios": {
        "buildConfiguration": "Debug"
      }
    },
    "production": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "autoIncrement": "versionCode",
        "gradleCommand":":app:assembleRelease"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
